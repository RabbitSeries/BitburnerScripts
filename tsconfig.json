{
  "include": [
    "NetscriptDefinitions.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "src/lib/react.ts"
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    // Type Checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "noImplicitThis": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "baseUrl": "src/",
    "allowJs": true,
    "jsx": "react",
    "paths": {
      "/*": [
        "*"
      ],
      "@ns": [
        "../NetscriptDefinitions.d.ts"
      ],
      "@react": [
        "lib/react.ts"
      ]
    }
  },
  "references": [
    {
      "path": "./tsconfig.build.json"
    }
  ]
}