{
  "name": "bitburner-typescript-template",
  "version": "2.0.0",
  "scripts": {
    "watch:build": "tsc -b",
    "watch:transpile": "tsc -w --preserveWatchOutput",
    "watch:local": "node bin/watch.js",
    "watch:remote": "node ./bitburner-filesync/npx/bitburner-filesync.js",
    "watch:init": "node bin/init.js",
    "watch:all": "concurrently npm:watch:transpile npm:watch:local npm:watch:remote",
    "watch": "npm run watch:build && npm run watch:init && npm run watch:all"
  },
  "author": "RabbitSeries, hydroflame, Hoekstraa, based on work by SlyCedix",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "chokidar": "^3.5.3",
    "concurrently": "^7.4.0",
    "eslint": "^9.35.0",
    "eslint-plugin-react": "^7.37.5",
    "fast-glob": "^3.2.12",
    "globals": "^16.4.0",
    "jiti": "^2.5.1",
    "sync-directory": "^5.1.7",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  }
}